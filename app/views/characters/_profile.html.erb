<section class="row">
    <section class="five wide column left aligned">
      <section class="ui card">
        <div class="image-portrait">
          <%= user_portrait style: 'width:100%;height:100%', gender: character.gender %>
          <h2 class="image-text">
            <%= character.name %>
          </h2>
        </div>
        <div class="extra content">
          <p>
            <i class="small arrow circle left icon"></i><span><%= character.gender %></span>
          </p>
          <p>
            <i class="small arrow circle left icon"></i><span><%= character.nationality %></span>
          </p>
          <p>
            <i class="small calendar outline icon"></i><span><%= character.DOB %></span>
          </p>
        </div>
      </section>
    </section>

    <section id="character-backstory-<%= character.id  %>" class="backstory eleven wide column">
      <div class="section-header">Backstory</div>
      <%= simple_form_for character, remote: true, html: { style: 'display:none', class: "edit-profile-form", :multipart => true } do |f| %>
        <%= f.input :description, label: false %>
        <%= f.submit 'SAVE' %>
      <% end %>
      <section class="content">
        <section class="description"><%= simple_format character.description %></section>
        <button id="js-edit-backstory-<%= character.id %>" class="edit-link">Edit</button>
      </section>
    </section>
</section>

<script type="text/javascript">
  $(document).ready(function(){
    $('#js-edit-backstory-<%= character.id  %>').click(function() {
      $(this).parent().toggle();
      $('#character-<%= character.id %> .backstory .edit-profile-form').toggle();
    });
  })
</script>
