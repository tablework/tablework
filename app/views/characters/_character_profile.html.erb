<section id="character-<%= character.id %>" class="profile ui grid">
  <header class="sixteen wide column">
    <a id="js-back-to-main-centerbox-<%= character.id %>" href="#">
      <i class="big arrow circle left icon"></i><span>Character Profile</span>
    </a>
  </header>
  <section class="row center">
    <section class="five wide column">
      <section class="ui card">
        <section class="image">
          <%= image_placeholder style: 'width:100%;height:100%', gender: character.gender %>
          <h2 class="image-text">
            <%= character.name %>
          </h2>
        </section>
        <section class="extra content">
          <p>
            <i class="small arrow circle left icon"></i><span><%= character.gender %></span>
          </p>
          <p>
            <i class="small arrow circle left icon"></i><span><%= character.nationality %></span>
          </p>
          <p>
            <i class="small calendar outline icon"></i><span><%= character.DOB %></span>
          </p>
        </section>
      </section>
    </section>
    <section class="two column"></section>
    <section class="backstory nine wide column">
      <h4>Backstory</h4>
      <%= simple_form_for character, remote: true, html: { style: 'display:none', class: "edit-profile-form" } do |f| %>
        <%= f.input :description, label: false %>
        <%= f.submit 'SAVE' %>
      <% end %>
      <section class="content">
        <section class="description"><%= simple_format character.description %></section>
        <button class="js-edit-description">Edit</button>
      </section>
    </section>
  </section>
  <hr>
  <section class="row notes">
    <h2>Notes</h2>
    <%= link_to add_note_character_path(character.id), class: 'sixteen wide column ui button', remote: true do %>
      <i class="arrow left circle icon"></i>
      <span>Add note</span>
    <% end %>
    <section id="note-start-<%= character.id %>"></section>
    <% character.notes.order('updated_at DESC').each do |note |%>
      <section class="sixteen wide column ui shadow card" style="margin: 20px 0" id="note-<%= note.id %>">
        <section class="header">
          <h3><%= note.title %></h3>
        </section>
        <section class="content">
          <%= note.text %>
        </section>
        <section class="meta">
          <section class="link"><%= note.link %></section>
        </section>
        <%= link_to remove_note_path(note.id), method: :delete, remote: true do %>
          <section class="ui bottom attached button">
            <i class="minus icon"></i>
            Delete
          </section>
        <% end %>
      </section>
    <% end %>
  </section>
</section>
<script type="text/javascript">
  $(document).ready(function(){
    $('#character-<%= character.id %> .backstory .js-edit-description').click(function() {
      $(this).parent().toggle();
      $('#character-<%= character.id %> .backstory .edit-profile-form').toggle();
    });
  })
</script>