<div class="card shadow">
  <section class="image">
    <%= image_placeholder%>
    <h4 class="image-text"><%= character.name %></h4>
  </section>
  <div class="extra content">
    <% if character.space %>
    <%= character.space.name %>
    <% else %>
    <small>Space unassigned</small>
    <% end %>
    <%= link_to assign_space_character_path(character) do %>
      <i class="large add circle icon"></i>
    <% end %>
  </div>
</div>