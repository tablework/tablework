<section id="js-edit-profile-modal" class="ui small modal">
  <i class="close icon"></i>
  <section class="header">
    <p>Edit Profile</p>
  </section>

  <section class="content">
    <p>Edit the details for your profile.</p>
      <section class="eleven wide column">
        <section class="form-inputs">
          <%= simple_form_for current_user, :html => { :multipart => true } do |f| %>
            <%= f.input :first_name, placeholder: 'First Name' %>
            <%= f.input :last_name, placeholder: 'Last Name' %>
            <%= f.input :DOB, label: 'Date Of Birth', as: :date, start_year: Date.today.year - 50,
            end_year: Date.today.year, discard_day: false,
            order: [:day, :month, :year], class: 'ui selection dropdown' %>
            <%= f.input :gender, as: :select, collection: ['male', 'female'], class: 'ui selection dropdown' %>
            <%= f.input :occupation, placeholder: 'Occupation' %>
            <%= f.input :location, placeholder: 'Location' %>
            <%= f.input :image, placeholder: 'Image' %>
          <% end %>
        </section>
      </section>
      <section class="ui button primary">Save</section>
    </section>
  </section>
</section>
<script>
$('#js-edit-profile-modal .ui.button.primary').click(function(){
  $("#js-edit-profile-modal").modal("hide")
  $('#edit_user_<%= current_user.id %>').trigger('submit');
})
</script>
<script>
  $(".modal-edit-profile").click(function(){
    $("#js-edit-profile-modal").modal("show")
  })
</script>