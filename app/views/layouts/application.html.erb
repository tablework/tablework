<!DOCTYPE html>
<html>
<head>
  <title>Tablework</title>
  <script src="https://js.braintreegateway.com/v2/braintree.js"></script>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Roboto:400,500,400italic,700,700italic,500italic' rel='stylesheet' type='text/css'>
</head>
<body class="<%= controller_name %> <%= action_name %> ">
  <section class="flash">
    <% if flash.present? %>
        <% flash.each do |key,value| %>
          <div class="ui floating message">
            <i class="close icon"></i>
            <p><%= flash[key] %></p>
          </div>
      <% end %>
    <% end %>
  </section>
  <header>
    <%= render 'layouts/header' if user_signed_in? %>
  </header>
  <section>
    <%= yield %>
  </section>
  <script>
    $(function(){
      $('.message .close').on('click', function() {
        $(this).closest('.message').fadeOut();
      });
    })
  </script>
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-67802526-1', 'auto');
    ga('send', 'pageview');
  </script>
</body>
</html>
