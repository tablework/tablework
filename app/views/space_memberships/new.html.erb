<%= render 'shared/edit_header' %>
<section class="ui eight wide column centered page grid">
  <section class="eight wide column sign">
    <section class="ui one columns grid">

      <section class="column">
        <h3>Invite Member</h3>

        <div class="form-inputs">
          <%= simple_form_for [:space, @space_membership] do |f| %>
            <%= f.input :email, placeholder: 'Email' %>
        </div>
        <div class="form-actions">
            <%= f.button :submit, 'INVITE', class: 'ui button fluid primary' %>
          <% end %>
        </div>

      </section>
    </section>
  </section>
</section>
