<section class="ui four columns centered grid">
  <section class="column sign">
    <section class="ui columns grid">
      <section class="column">
        <h3>Sign up</h3>

        <div class="ui fluid input form-inputs">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>

            <%= f.input :email, required: true, placeholder: 'Email address', autofocus: true %>

            <%= f.input :password, required: true, placeholder: 'Password', hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>

            <%= f.input :password_confirmation, placeholder: 'Confirm password', required: true %>

            <div class="form-actions">
              <%= f.button :submit, "Sign up", class: 'ui button yellow', style: "margin: 10px 0px;" %>
          <% end %>
              <%- if devise_mapping.omniauthable? %>
                <%- resource_class.omniauth_providers.each do |provider| %>
                  <%= link_to omniauth_authorize_path(resource_name, provider), class: "ui button #{provider}", style: 'margin: 10px 0px;' do %>
                    <i class="facebook icon"></i>
                    <%= "Sign up with #{provider.to_s.titleize}" %>
                  <% end%>
                <% end -%>
              <% end -%>
            </div>
        </div>
      </section>
    </section>
  </section>
</section>
