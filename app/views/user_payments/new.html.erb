<script type="text/javascript">
  $(function(){
    braintree.setup(
      '<%= @client_token %>', 
      'dropin', {
        container: 'checkout',
        form: 'brainsub'
        
      });
  });
</script>
<%= form_tag user_payments_payments_path, class: 'ui form', id: 'brainsub'  do %>
  <div class="field">
    <label>Name on card</label>
    <input type="text" name="nameoncard" maxlength="255">
  </div>
  <div id="checkout" class="checkout"></div>
  <div class="grouped fields">
    <label for="fruit">Select your plan</label>
    <div class="field">
      <div class="ui radio checkbox checked">
        <input type="radio" name="plan" value="Subscription" checked="">
        <label>Subcription</label>
      </div>
    </div>
    <div class="field">
      <div class="ui radio checkbox">
        <input type="radio" name="plan" value="Yearly">
        <label>Yearly</label>
      </div>
    </div>
  </div>

	<div class="field">
    <%= submit_tag 'pay', class: 'ui primary button' %>
    </div>
<% end %>

