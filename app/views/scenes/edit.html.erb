<section class="ui four columns centered grid">
  <section class="column sign">
    <section class="ui one columns grid">

      <section class="column">
        <h3>Edit Scene</h3>

        <div class="form-inputs">
          <%= simple_form_for [@scenable, @scene] do |f| %>
            <%= f.input :title, placeholder: 'Title' %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, 'EDIT SCENE', class: 'ui button fluid primary' %>
          <% end %>
        </div>

      </section>
    </section>
  </section>
</section>
